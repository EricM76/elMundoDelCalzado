      <!-- navegacion -->
      <main class="adminForm">
        <div class="">
          <div class="">
            <div class="">
              <h2 class="">Estás editando: <i>
                  <%= idFind.title %>
                    </i< /h2>
            </div>
          </div>
          <div class="contenedor-form">
            <form action="/admin/edit/<%= idFind.id %>?_method=PUT " method="POST">
              <div class="contenedorLabel">

                <div class="labelForm">
                  <label for="title" class="">Nombre del producto:</label>
                  <input type="text" id="title" name="title" placeholder="Ej: Zapatillas Reebok" class="form-input"
                    value="<%= idFind.title %> ">
                </div>
                <div class="labelForm">
                  <label for="price" class="">Precio del producto:</label>
                  <input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input"
                    value="<%= toThousand(idFind.price) %>">
                </div>
                <section class="seccion">
                  <div class="labelForm width">
                    <label for="colors" class="">Colores:</label>
                    <% colores.map(e=> {%>
                      <input type="text" id="colors" name="colors" value="<%= e %>" class="form-input1">
                      <%}) %>

                  </div>
                  <div class="labelForm width">
                    <label for="detalles" class="1">Detalles:</label>
                    <% detalles.map(e=> {%>
                      <input type="text" id="detalles" name="detalles" value="<%= e %>" class="form-input1">
                      <%}) %>


                  </div>
                </section>

                <div class="selection">
                  <div>
                    <label for="genero" class="form-label" value="<%= idFind.genero %>">Genero</label>
                    <select name="genero" id="genero" class="form-input">
                      <option value="" hidden selected>Elegí</option>
                      <option value="hombre" <%=idFind.genero==="hombre" ? "selected" : null %>>Hombre</option>
                      <option value="mujer" <%=idFind.genero==="mujer" ? "selected" : null %>>Mujer</option>
                    </select>
                  </div>
                  <div>
                    <label for="temporada" class="form-label" value="<%= idFind.temporada %>">Temporada</label>
                    <select name="temporada" id="temporada" class="form-input">
                      <option value="" hidden selected>Elegí</option>
                      <option value="true" <%=idFind.temporada==="true" ? "selected" : null %>>True</option>
                      <option value="false" <%=idFind.temporada==="false" ? "selected" : null %>>False</option>

                    </select>
                  </div>
                  <div>
                    <label for="outlet" class="form-label" value="<%= idFind.outlet %>">Outlet</label>
                    <select name="outlet" id="outlet" class="form-input">
                      <option value="" hidden selected>Elegí</option>
                      <option value="true" <%=idFind.outlet==="true" ? "selected" : null %>>True</option>
                      <option value="false" <%=idFind.outlet==="false" ? "selected" : null %>>False</option>

                    </select>
                  </div>
                  <div>
                    <label for="marca" class="form-label">Marca</label>
                    <select name="marca" id="marca" class="form-input">
                      <option value="" hidden selected>Marca</option>
                      <option value="adidas" <%=idFind.marca==="adidas" ? "selected" : null %>>Adidas</option>
                      <option value="nike" <%=idFind.marca==="nike" ? "selected" : null %>>Nike</option>
                      <option value="asics" <%=idFind.marca==="asics" ? "selected" : null %>>Asics</option>
                      <option value="fila" <%=idFind.marca==="fila" ? "selected" : null %>>Fila</option>
                      <option value="topper" <%=idFind.marca==="topper" ? "selected" : null %>>Topper</option>
                      <option value="converse" <%=idFind.marca==="converse" ? "selected" : null %>>Converse</option>
                      <option value="newbalance" <%=idFind.marca==="newbalance" ? "selected" : null %>>New Balance
                      </option>
                      <option value="puma" <%=idFind.marca==="puma" ? "selected" : null %>>Puma</option>
                      <option value="adidasoriginal" <%=idFind.marca==="adidasoriginal" ? "selected" : null %>>Adidas
                        Original</option>
                    </select>
                  </div>
                </div>
                <div>
