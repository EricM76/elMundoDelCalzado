<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%-include('./partials/head') %> 
<!-- head -->
<body class="crearForm">
    <!-- navegacion -->
        <%-include('./partials/header')  %>
    <!-- navegacion -->
    <main class="adminForm">
      <div >
        <div >
          <div >
            <h2 class="">Estás editando: <i><%= idFind.title %> </i></h2>
          </div>
        </div>
        <div class="contenedor-form">
          <form action="/admin/edit/<%= idFind.id %>?_method=PUT" method="POST">
            <div class="contenedorLabel">

              <div class="labelForm">
                <label for="title" class="">Nombre del producto:</label>
                <input type="text" id="title" name="title" 
                  class="form-input"value="<%= idFind.title %> ">
              </div>
              <div class="labelForm">
                <label for="price" class="">Precio del producto:</label>
                <input type="text" id="price" name="price" 
                  class="form-input"value="<%= toThousand(idFind.price) %> ">
  
              <div class="labelForm">
                <label for="marca" class="">Marca:</label>
                <input type="text" id="marca" name="marca" 
                  class="form-input"value="<%= idFind.marca %> ">
              </div>
              <div class="labelForm">
                <label for="genero" class="l">Genero:</label>
                <input type="text" id="genero" name="genero" 
                  class="form-input"value="<%= idFind.genero %> ">
              </div>
              
              <div class="selection">
                <div>
                <label for="outlet" class="form-label">Temporada</label>
                <select name="temporada" id="temporada" class="form-input">
                  <option value="">Elegí</option>
                  <option value="true"<%= idFind.temporada === "true" ? "selected" : null %>>True</option>
                  <option value="false"<%= idFind.temporada === "false" ? "selected" : null %>>False</option>
                </select>
                </div>
              <div>
                <label for="outlet" class="form-label">Outlet</label>
                <select name="outlet" id="outlet" class="form-input">
                  <option value="">Elegí</option>
                  <option value="true"<%= idFind.outlet === "true" ? "selected" : null %>>True</option>
                  <option value="false"<%= idFind.outlet === "false" ? "selected" : null %>>False</option>
                </select>
              </div>
              </div>
              <div class="labelForm">
                <label for="description" class="form-label">Descripción:</label>
                <textarea name="description" id="description" class="form-input"><%= idFind.description%></textarea>
              </div>

            <div class="col-12">
             <button type="submit" class="btn btn-outline-success">Editar Producto</button> 
            </div>
          </div>
        </form>
      </div>
     

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</main>
    </body>
</html>