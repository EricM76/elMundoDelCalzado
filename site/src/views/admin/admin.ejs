<!DOCTYPE html>
<html lang="en">

<!-- head -->
<%-include('./partials/head') %> 
<!-- head -->
<body>
    <!-- navegacion -->
        <%-include('./partials/header')  %>
    <!-- navegacion -->

      <!-- TABLAS -->
      
    <a href="/admin/create" class="btn btn-outline-primary m-3" role="button" aria-disabled="true">Crear</a>
      
    <div class="">
      <table class="table" style="width: 150%;">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precios</th>
            <th scope="col">Genero</th>
            <th scope="col">Marca</th>
            <th scope="col">Temporada</th>
            
          </tr>
        </thead>
        <tbody>
         <% products.map(e=>{%>
          <tr>
            <th scope="row"><%= e.id %> </th>
            <td><%= e.title %>  </td>
            <td>$<%= toThousand(e.price) %></td>
            <td><%= e.genero %></td>
            <td><%= e.marca %></td>
            <td><%= e.temporada %></td>
          
            <td>
              <a href="/admin/edit/<%= e.id %> " class="btn btn-outline-primary" role="button" aria-disabled="true">Editar</a>
              <form action="/admin/eliminar/<%= e.id %>?_method=DELETE " method="POST" style="display: inline-flex">
                <button type="submit" class="btn btn-outline-danger">ELIMINAR</button>
              </form>
            </td>
          </tr>
        <%})%>
        </tbody>
       
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>