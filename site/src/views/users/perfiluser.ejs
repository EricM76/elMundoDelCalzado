  <!-- HEADER -->

<body>
    <form action="/user/updatePerfil/<%= userPerfil.id %> " method="POST">
    <section class="seccion-perfil-usuario">
        <div class="perfil-usuario-header">
            <div class="perfil-usuario-portada">
                <div class="perfil-usuario-avatar">
                    <img src="/images/users/<%= userPerfil.img %> " alt="img-avatar">
                    <button type="button" class="boton-avatar">
                        <input type="file" name="img" id="img" class= "boton-avatar2">
                        <i class="far fa-image"></i>
                    </button>
                </div>
              
            </div>
        </div>
        <div class="perfil-usuario-body">
            <div class="perfil-usuario-bio">
                <h2 class="titulo">
                    
                    <input type="text" name="nombre" id="nombre" value="<%= userPerfil.nombre %>"> 
                    <input type="text" name="apellido" id="apellido" value="<%= userPerfil.apellido %>">  
                </h2>
                
            </div>
            <div class="perfil-usuario-footer">
                    <label for="email">
                        <i class="fas fa-envelope"></i>
                        Email de usuario:
                    </label>
                    <input type="email" name="email" id="email" value="<%= userPerfil.email %>">
                    <label for="password">
                        <i class="fas fa-key"></i>
                        Password:
                    </label>
                    <input type="password" name="password" id="password" value="<%= userPerfil.password %>">   
            </div>
        </div>
        <div class="editarBtn">
            <button type="submit" class="bt_modif">Modificar</button>
            <button type="submit" class="bt_eliminar">Eliminar</button>
        </div>
    </section>
    
</form>
    <!--====  End of html  ====-->
