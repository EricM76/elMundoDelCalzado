        <!-- ruta -->
        <section class="ruta oculto">
            <a href="/home">INICIO ></a>
            <span class="ruta-span">Nombre del Producto</span>
        </section>

        <!-- banner del producto -->
        <section class="bannerProducto">
            <img src="/images/detalleProducto/bannerdetalleprod.png" alt="banner de una persona deportista corriendo">
        </section>

        <!-- seccion de zapatillas -->
        <section class="zapatillas1">
            <article class="zapatillas1-articulos">
                <div class="zapatilla-principal">
                    <img src="/images/detalleProducto/zpatilla.jpg" alt="zapatilla adiddas">
                </div>
                <div class="zapatillas1-colores">
                    <div class="zapatillas1-colors_eleccion">
                        <img src="/images/detalleProducto/zapatilla-azul.jpg" alt="zapatilla azul">
