<!DOCTYPE html>
<html lang="en">

 <!-- HEAD -->
<%- include('../partials/head') %> 
<!-- HEAD -->

<body>
    
    <!-- HEADER -->
    <%- include('../partials/header') %> 
    <!-- HEADER -->

    <!-- MAIN -->
    <main>
        <h1>TODOS LOS PRODUCTOS</h1>
        <br>
    <section class="mercaderia">
    <%  productos.map(e=>{%>
        <%if(e.temporada=== false){%>
       <article class="zapatilla-img <%= e.oculto %>">
           <a href="/products/productDetail/<%= e.id %> ">
           <div>
               <img  src="/images/articulos/<%= e.imgP %> " alt="zapatilla-img1">
           </div>  
           <div class="ofertasZapatillaPrecio">
               <h4>$<%= e.price %> </h4>
               <p><%= e.marca %>  </p>
               <p><%= e.title%></p>
           </div>
       </a> 
       </article>
       <% }else{ %> 
           <article class=>
               <a href="/products/productDetail/<%=e.id %> ">
               <div>
                   <img src="/images/articulos/<%= e.imgP %> " alt="zapatilla-img1">
               </div>  
               <div class="ofertasZapatillaPrecio">
                  
                  <h4>$<%= e.price %> </h4>
                   <p><%= e.marca %>  </p>
                   <p><%= e.title %> </p>
                  
               </div> 
           
            </a>
           </article>
       <% } %>
       <% }) %>
    </section>
</main>
    <!-- MAIN -->
            
        <!-- FOOTER -->
        <%- include('../partials/footer') %> 
        <!-- FOOTER -->

    </body>
</html>